    <a href="?add" class="btn btn-default">Create Product</a>
    <a href="?list" class="btn btn-default">List Products</a>


    {% if this.products %}
        <table class="table">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
            </tr>
            {% for item in this.products %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.price }} â‚¬</td>
                    <td>{{ item.stock }}</td>
                </tr>
            {% endfor %}
